@using Resources
@model JehovaJireh.Web.UI.Models.IndexViewModel
@{
    ViewBag.Title = Resources.Manage;
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>@Resources.ChangeAccoutSettings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Resources.PasswordHash:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink(string.Format("{0} {1}",Resources.Change, Resources.PasswordHash), "ChangePassword")
            }
            else
            {
                @Html.ActionLink(Resources.Create, "SetPassword")
            }
            ]
        </dd>
        <dt>@Resources.UpdateAccount:</dt>
        <dd>
            [ @Html.ActionLink(Resources.Change, "UpdateAccount")  ]
        </dd>
        @*
